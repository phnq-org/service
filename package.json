{
  "name": "@phnq/service",
  "version": "2.2.1",
  "description": "Utilities for building microservices systems.",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pgostovic/service.git"
  },
  "scripts": {
    "dist": "bun build --production ./src/index.ts --outdir ./dist --target node --packages=external; tsc --project tsconfig.types.json",
    "clean": "rimraf dist *.tsbuildinfo",
    "prelint": "tsc -b",
    "lint": "biome check src",
    "release": "bun run clean && bun run dist && bun test && bun publish",
    "test:nats": "PHNQ_SERVICE_NATS=nats://localhost:${NATS_PORT:=4224} PHNQ_SERVICE_NATS_MONITOR=http://localhost:${NATS_MONITOR_PORT:=8224} PHNQ_SERVICE_SIGN_SALT=abcd1234 bun test",
    "pretest:nats": "if [ \"$CI\" != \"1\" ]; then podman run -d --name nats_phnq_service_test -p 4224:4222 -p8224:8222 nats; fi",
    "posttest:nats": "if [ \"$CI\" != \"1\" ]; then podman stop nats_phnq_service_test; podman rm nats_phnq_service_test; fi"
  },
  "engines": {
    "node": ">=14"
  },
  "author": "Patrick Gostovic",
  "license": "ISC",
  "dependencies": {
    "@phnq/log": "^1.1.5",
    "@phnq/message": "^2.0.4",
    "crypto-random-string": "^3.3.1",
    "md5": "^2.3.0",
    "nats": "^2.9.1",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/bun": "^1.2.21",
    "@types/md5": "^2.3.2",
    "@types/uuid": "^9.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.2"
  }
}
